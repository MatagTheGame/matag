{
  "name": "matag-game",
  "version": "1.0.0",
  "description": "matag game ui",
  "private": true,
  "scripts": {
    "build-dev": "webpack -d",
    "build-prod": "webpack -p",
    "lint": "eslint src/main/js src/test/js/ --ext .js --ignore-pattern node_modules/",
    "lint-fix": "eslint src/main/js src/test/js/ --ext .js --fix",
    "postinstall": "yarn build-prod",
    "test": "jest",
    "watch": "webpack -d --watch",
    "watch-htmlunit": "webpack -p --watch"
  },
  "author": "Antonio Alonzi",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@stomp/stompjs": "^5.4.4",
    "lodash": "^4.17.21",
    "prop-types": "^15.7.2",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "sockjs-client": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "css-loader": "^3.4.2",
    "eslint": "^7.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-react": "^7.20.0",
    "jest": "^24.8.0",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.2.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src/test/js"
    ],
    "moduleNameMapper": {
      "^game/(.*)$": "<rootDir>/src/main/js/game/$1"
    }
  }
}
